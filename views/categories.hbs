
<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if categories}}
                        {{#each categories}}
                            <tr>
                                <td><a href="/shop?category={{this.id}}">{{this.id}}</a></td>
                                <td><a href="/shop?category={{this.id}}">{{this.category}}</a></td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="2">No categories available.</td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>
        {{#if message}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/if}}
    </div>
</div>
